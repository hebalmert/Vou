@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<div>
    <div>
        <a title="Editar" asp-action="Edit" class="btn btn-outline-dark btn-bor btn-sm"><i class="bi bi-pencil-square" style="font-size: 17px;"></i></a>

        <a title="Detalle" asp-action="Details" class="btn btn-outline-dark btn-bor btn-sm"><i class="bi bi-card-text" style="font-size: 17px;"></i></a>

        <button type="button" title="Borrar"
                class="btn btn-outline-danger btn-bor btn-sm" id="deleteItem"
                data-bs-toggle="modal" data-bs-target="#deleteDialog">
            <i class="bi bi-trash" style="font-size: 17px;"></i>
        </button>
    </div>
</div>
<br />
<p>
    <div>
        <button title="Volver" type="button" class="btn btn-outline-dark btn-bor">
            <i class="bi bi-box-arrow-left" style="font-size: 20px;"></i>
            Volver
        </button>
    </div>
</p>
<br />
<p>
    <div>
        <Switch @bind-Value="agree1" Label="Default switch checkbox input" />
       <Switch @bind-Value="agree2" Label="Checked switch checkbox input" />

<div class="mt-3">Switch 1 Status: <b>@agree1</b></div>
<div>Switch 2 Status: <b>@agree2</b></div>
    </div>
</p>

@code {
    bool agree1;
    bool agree2 = true;
}